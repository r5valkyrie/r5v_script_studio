{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "R5V Studio",
  "version": "0.1.0",
  "identifier": "org.playvalkyrie.r5vstudio",
  "build": {
    "beforeDevCommand": "npm run dev:web",
    "devUrl": "http://localhost:4321",
    "beforeBuildCommand": "npm run build:web",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "R5V Studio",
        "width": 1150,
        "height": 800,
        "minWidth": 1150,
        "minHeight": 800,
        "decorations": false,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {},
    "windows": {}
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
