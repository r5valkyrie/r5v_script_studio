---
import '../styles/global.css';
import VisualScriptEditor from '../components/VisualScriptEditor';
---

<html lang="en" data-theme="dark">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/icon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>R5V Script Studio</title>
	</head>
	<body class="overflow-hidden">
		<!-- Window controls header -->
		<header class="drag-region h-[42px] flex items-center justify-between px-4 gap-2 bg-[#0f1419]/98 backdrop-blur-xl border-b border-white/10 shadow-lg">
			<div class="flex items-center gap-2 text-sm font-semibold text-gray-400 tracking-wide">
				<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400"><line x1="6" x2="6" y1="3" y2="15"></line><circle cx="18" cy="6" r="3"></circle><circle cx="6" cy="18" r="3"></circle><path d="M18 9a9 9 0 0 1-9 9"></path></svg>
				R5V Script Studio
			</div>
			<div class="flex gap-2 no-drag">
				<button class="px-3 py-1 hover:bg-white/10 rounded-lg transition-colors text-gray-400 hover:text-white" onclick="window.electronAPI.minimize()">_</button>
				<button class="px-3 py-1 hover:bg-white/10 rounded-lg transition-colors text-gray-400 hover:text-white" onclick="window.electronAPI.maximize()">▢</button>
				<button class="px-3 py-1 hover:bg-red-500 rounded-lg transition-colors text-gray-400 hover:text-white" onclick="window.electronAPI.close()">✕</button>
			</div>
		</header>
		<main class="h-[calc(100vh-42px)]">
			<VisualScriptEditor client:load />
		</main>
	</body>
</html>
